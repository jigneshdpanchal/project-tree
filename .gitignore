#!/usr/bin/env node

const fs = require("fs");
const path = require("path");

const ROOT_DIR = process.argv[2] || ".";

const IGNORE = new Set([
  "node_modules",
  ".git",
  ".next",
  "dist",
  "build",
  "coverage",
  ".env",
  ".DS_Store",
  "package-lock.json",
  "yarn.lock",
  "pnpm-lock.yaml"
]);

function generateTree(dir, prefix = "") {
  let items;

  try {
    items = fs.readdirSync(dir, { withFileTypes: true });
  } catch {
    return;
  }

  items = items.filter(item => !IGNORE.has(item.name));

  items.forEach((item, index) => {
    const isLast = index === items.length - 1;
    const connector = isLast ? "└── " : "├── ";

    console.log(prefix + connector + item.name);

    if (item.isDirectory()) {
      const newPrefix = prefix + (isLast ? "    " : "│   ");
      generateTree(path.join(dir, item.name), newPrefix);
    }
  });
}

console.log(path.basename(path.resolve(ROOT_DIR)) || ".");
generateTree(ROOT_DIR);
